import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.HashSet;
import java.util.Set;

public class CsvRowComparer {
    public static void main(String[] args) {
        // Hardcoded paths to the CSV files
        String csvFile1 = "path/to/csv1.csv";
        String csvFile2 = "path/to/csv2.csv";

        Set<String> csv2Rows = new HashSet<>();
        int csv2LineCount = 0;  // To count the number of lines in the second CSV file

        // Read the second CSV file and store rows in a set
        try (BufferedReader br = new BufferedReader(new FileReader(csvFile2))) {
            String line;
            while ((line = br.readLine()) != null) {
                csv2Rows.add(line.trim());  // Add each row from the second CSV file to the set
                csv2LineCount++;
            }
        } catch (IOException e) {
            System.err.println("Error reading file: " + csvFile2 + " - " + e.getMessage());
        }

        int csv1LineCount = 0;  // To count the number of lines in the first CSV file
        int nonMatchingRowCount = 0;  // To count the number of non-matching rows

        // Read the first CSV file and compare rows
        try (BufferedReader br = new BufferedReader(new FileReader(csvFile1))) {
            String line;
            int lineNumber = 1;
            int notFoundCount = 1;  // To track the sequence number for not found cases

            while ((line = br.readLine()) != null) {
                String trimmedLine = line.trim();
                if (!csv2Rows.contains(trimmedLine)) {
                    System.out.println(notFoundCount + ") Row from " + csvFile1 + " not found in " + csvFile2 + ": " + trimmedLine);
                    notFoundCount++;
                    nonMatchingRowCount++;
                }
                lineNumber++;
                csv1LineCount++;
            }
        } catch (IOException e) {
            System.err.println("Error reading file: " + csvFile1 + " - " + e.getMessage());
        }

        // Print the total count of lines in each CSV file
        System.out.println("\nTotal lines in " + csvFile1 + ": " + csv1LineCount);
        System.out.println("Total lines in " + csvFile2 + ": " + csv2LineCount);

        // Print the total count of non-matching rows
        System.out.println("Total non-matching rows from " + csvFile1 + " not found in " + csvFile2 + ": " + nonMatchingRowCount);
    }
}